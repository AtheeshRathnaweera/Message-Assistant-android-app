<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/historyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:background="@drawable/history_date_label_background"
        android:textColor="@color/white"
        android:elevation="7dp"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/historyitemcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/background_card_view"
        android:clickable="true"
        android:elevation="15dp"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:minHeight="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="85dp"
            android:minWidth="300dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="10">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/background"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:minWidth="40dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/historytype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="type"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:rotation="270"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="5dp"
                android:minWidth="200dp"
                android:layout_weight="5">

                <TextView
                    android:id="@+id/historytitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/historycontactNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Number"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/sentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="time"
                    android:textColor="@color/grey"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:layout_marginTop="2dp"/>


            </LinearLayout>


            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="status"
                android:gravity="end|bottom"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="2"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>